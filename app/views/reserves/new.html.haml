- content_for :title do 
    Hotel 
    \|
    Booking Room
.container
    .card 
        .card-header 
            %h1 
                New Booking 
        .card-body
            -# = render 'form'
            = form_tag room_reserves_path(@room) do 
                = submit_tag "Book #{number_to_currency(@room.price)} Per night ", class: 'btn btn-lg btn-success'
        .card-footer
            - if current_user.has_role?(:admin)
                = link_to 'Back', reserves_path
            - else 
                = link_to 'Back', rooms_path
